@{
}

@model IEnumerable<string>

<!-- this is for the category section on the left hand side of the home page-->
<div class="d-grid p-25">
    <a asp-controller="Home" asp-action="Index" asp-route-category="" asp-route-PageNum="1" class="btn btn-outline-secondary">All Books</a>

    @foreach (string t in Model)
    {
        <a asp-controller="Home" asp-action="Index" asp-route-category="@t"
           class="btn @(ViewBag.SelectedType == t ? "btn-primary" : "btn-outline-secondary")">@t</a>
    }
</div>